<% content_for :name, @wine.name %>
<article class="wine">
  <header>
    <h2><%= @wine.name%> (<%= @wine.year %>)</h2>
  </header>
  <p><label>Winery:</label> <%= @wine.winery %></p>
  <p><label>Country:</label> <%= @wine.country %></p>
  <p><label>Varietal:</label> <%= @wine.varietal %></p>
</article>

<%= link_to 'Back to All Wines', wines_path %> | <%= link_to 'Edit', edit_wine_path(@wine) %>
</br></br>
<%= button_to 'Delete', @wine,
               method: :delete,
               data: { confirm: 'Delete this Wine?' } %>
<br/>
<p>
  Read all
  <%= link_to pluralize(@wine.log_entries.size, 'log entry'),
                        wine_log_entries_path(@wine) %>
</p>
<p><label>Average Rating:</label> <%= format_average_ratings(@wine) %></p>
