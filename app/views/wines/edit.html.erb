<h1>Editing <%= @wine.name %></h1>
<%= form_for(@wine) do |f| %>
  <%= f.label :name %> <%= f.text_field :name, autofocus: true %><br />
  <%= f.label :year %> <%= f.text_field :year %><br />
  <%= f.label :winery %> <%= f.text_field :winery %><br />
  <%= f.label :country %> <%= f.text_field :country %><br />
  <%= f.label :varietal %> <%= f.select :varietal, Wine::VARIETALS, { prompt: "Pick one" } %><br />
  <p><%= f.submit %> <%= f.submit "Reset", :type => "reset"%> <%= link_to 'Cancel', wines_path %> </br></br><%= button_to 'Back', :back %></p>
<% end %>